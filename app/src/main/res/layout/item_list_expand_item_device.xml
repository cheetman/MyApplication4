<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_touch_bg"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/iv_item_device_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="5dp"
            android:layout_centerVertical="true">
        </ImageView>
        <TextView
            android:text="Light1Light1Light1Light1"
            android:id="@+id/tv_item_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_item_device_icon"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="26sp" />

        <TextView
            android:text="ROOM1ROOM1"
            android:id="@+id/tv_item_device_roomname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/iv_item_device_icon"
            android:layout_below="@id/tv_item_device_name"
            android:textSize="18sp"
            />

    </RelativeLayout>



    <View
        android:id="@+id/v_item_device_line"
        style="@style/h_line"
        android:layout_height="1px"/>
</LinearLayout>