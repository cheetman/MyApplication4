<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_touch_bg_transparent"
    android:clickable="true"
    android:focusable="true"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:text="Light1Light1Light1Light1"
            android:id="@+id/tv_item_device_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="26sp"
            android:textColor="@color/white_t80"
            />

        <TextView
            android:text="ROOM1ROOM1"
            android:id="@+id/tv_item_device_status"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textSize="18sp"
            android:textColor="@color/white_t80"
            />

        <View
            android:id="@+id/v_item_device_line"
            style="@style/h_line"
            android:layout_height="4dp"
            android:background="@color/white_t80"/>

    </LinearLayout>


        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>


</LinearLayout>