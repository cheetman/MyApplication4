<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_touch_bg"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/iv_item_favorite_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/selector_section_toggle_favorite"
            android:backgroundTint="@color/selector_section_toggle_favorite"
            >
        </ToggleButton>

        <TextView
            android:id="@+id/tv_item_scene_name"
            android:text="Light1Light1Light1Light1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/iv_item_right_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_item_arrow_right_black"
            android:tint="@color/darkgrey">
        </ImageView>

    </LinearLayout>
    <View
        android:id="@+id/v_item_device_line"
        style="@style/h_line"
        android:layout_height="1px"/>
</LinearLayout>